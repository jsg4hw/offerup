<%= form_with(model: @item, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :title %>

    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price %>

    <%= f.text_field :price, class: "form-control" %>
  </div>

  <%= f.hidden_field :category_id, value: @category.id %>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <div class="form-group">
    <%= f.label :image %>

    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :item_location %>

    <%= f.text_field :item_location, class: "form-control" %>
  </div>

  <div class="form-check">
    <%= f.check_box :purchased, class: "form-check-input" %>
    <%= f.label :purchased, class: "form-check-label" %>
  </div>

  <%= f.submit "Create item", class: "btn btn-block btn-outline-secondary" %>
<% end %>
